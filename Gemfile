source "https://rubygems.org"

# Pin to the GitHub Pages environment (brings in Jekyll and safe plugins)
gem "github-pages", group: :jekyll_plugins

# Academic Pages plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-redirect-from"
  gem "jemoji"
  gem "jekyll-scholar"   # for publications via BibTeX
end

# Keep if your template expects it
gem "connection_pool", "2.5.0"

# Windows: provide timezone data
gem "tzinfo-data"

# Ruby 3+: local dev server
gem "webrick", "~> 1.8"